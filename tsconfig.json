{
	"compilerOptions": {
		"jsx": "react",
		"allowJs": true,
		"checkJs": true,
		"module": "CommonJS",
		"target": "ES5",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"baseUrl": ".",
		"outDir": "dist",
		"noEmit": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"strict": true,
		"downlevelIteration": true,
		"paths": {
			"*": ["node_modules/*"]
		}
	},
	"include": [
		"src/**/*"
	]
}
